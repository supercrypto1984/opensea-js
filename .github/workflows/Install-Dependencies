name: Installâ€”Dependencies

on:
  workflow_dispatch:  # Allows manual triggering
  push:
    paths:
      - 'package.json'
      - 'yarn.lock'
      - 'sell.js'

jobs:
  install:
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v3
      with:
        fetch-depth: 0  # Full clone of the repository

    - name: Setup Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '20.x'
        cache: 'yarn'  # Enable dependency caching

    - name: Install dependencies from package.json
      run: |
        yarn install --frozen-lockfile

    - name: Install additional dependencies for sell.js
      run: |
        yarn add @opensea/seaport-js @truffle/hdwallet-provider fs random dotenv

    - name: Package node_modules
      run: |
        tar -czf node_modules.tar.gz node_modules
        
    - name: Upload node_modules
      uses: actions/upload-artifact@v3
      with:
        name: node_modules
        path: node_modules.tar.gz
        retention-days: 5

    - name: Create Pull Request
      uses: peter-evans/create-pull-request@v5
      with:
        commit-message: Update node_modules
        title: 'Update node_modules dependencies'
        body: 'Automated update of node_modules dependencies including those for sell.js'
        branch: update-dependencies
